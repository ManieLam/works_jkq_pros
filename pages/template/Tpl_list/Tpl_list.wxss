/*flex-images*/

.list-box {
    display: block;
    list-style-type: disc;
    /*-webkit-margin-before: 1em;
    -webkit-margin-after: 1em;*/
    -webkit-margin-start: 0px;
    -webkit-margin-end: 0px;
    -webkit-padding-start: 10px;
    -webkit-padding-end: 10px;
}

.rel {
    position: relative;
}

.flex-image,
.flex-image-nomar {
    margin-right: 5px;
    margin-bottom: 5px;
}

.flex-image-nomar:nth-child(3n) {
    margin-right: 0px;
}


/*带遮罩层*/

.blockList {
    margin-top: 20rpx;
    margin-right: 9px;
    float: left;
    min-width: 48%;
    /*flex: 2*/
}

.blockList:nth-child(2n) {
    margin-right: 0rpx;
}

.list_imgs {
    width: 100%;
    height: auto;
}

.list_cover {
    background-color: rgba(0, 0, 0, .2);
    position: absoule;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.list_cover-text {
    text-align: center;
    color: #fff;
    padding-top: 30%;
}

.clearfix:after {
    /*content: ".";
    height: 0;
    visibility: hidden;
    clear: both;*/
    content: "";
    display: table;
    clear: both;
}